<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Favoris</title>
    <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-black text-light">
    <?- include('header.ejs') ?>
    <h1 class="mt-5 mb-5 text-center"> Voici la liste de vos favoris</h1>
    <div class="d-flex flex-row justify-content-center p-2">
      <? favoris.forEach(film =>
      { ?>
      <div class="card p-2 m-2" style="width: 15rem">
        <img
          src="<?= film.image ?>"
          class="card-img-top"
          alt="<?= film.titre ?>"
        />
        <div class="card-body text-center">
          <h5 class="card-title"><?= film.titre ?></h5>
          <p class="card-text"><?= film.description ?></p>
          <? if(session.user && session.user.role == 'admin') {?>
          <a href="/films/update/<?= film.id_film ?>" class="btn btn-warning p-2 text-light">Modifier</a>
          <a href="/films/remove/<?= film.id_film ?>" class="btn btn-danger p-2"
            >Supprimer</a
          >
          <?}?>
        </div>
      </div>
      <? }); ?>
    </div>
</body>
</html>