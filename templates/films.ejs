<!DOCTYPE html>
<html lang="fr">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Films</title>
  <link href="/bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-black text-light">
  <?- include('header.ejs') ?>
  <h1 class="text-center mb-5">Voici les films en stock</h1>
  
  <div class="d-flex flex-row justify-content-center p-2">
    <? films.forEach(film => { ?>
    <div class="card p-2 m-2" style="width: 15rem">
      <img src="<?= film.image ?>" class="card-img-top" alt="<?= film.titre ?>">
      <div class="card-body">
        <h5 class="card-title"><?= film.titre ?></h5>
        <p class="card-text"> <?= film.description ?> </p>
        <a href="#" class="btn btn-primary mb-2">Ajouter aux favoris</a>
        <? if(session.user && session.user.role == 'admin') {?>
          <a href="#" class="btn btn-primary">Modifier</a>
        <?}?>
      </div>
    </div>
    <? }); ?>
  </div>

</body>

</html>